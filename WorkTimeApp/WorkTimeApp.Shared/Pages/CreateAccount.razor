@page "/createAccount"
@inject NavigationManager Navigation
@using WorkTimeApp.Shared.Model
@using WorkTimeApp.Shared.Services

@inject NavigationManager Navigation
<PageTitle>CreateAccount</PageTitle>

<PageTitle>Rejestracja</PageTitle>

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-3">
            <h2 class="text-primary">
                <i class="bi bi-person-plus"></i> Utwórz konto
            </h2>
            <p class="text-muted">Wypełnij poniższe pola, aby się zarejestrować</p>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger text-center">
                @ErrorMessage
            </div>
        }

        <form @onsubmit="Submit">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" type="email" @bind="Email" class="form-control" placeholder="Wprowadź email" required />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Hasło</label>
                <input id="password" type="password" @bind="Password" class="form-control" placeholder="Wprowadź hasło" required />
            </div>
            <div class="mb-3">
                <label for="confirm_password" class="form-label">Potwierdź hasło</label>
                <input id="confirm_password" type="password" @bind="ConfirmPassword" class="form-control" placeholder="Powtórz hasło" required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Zarejestruj się
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <button class="btn btn-link" @onclick="NavigateToHome">
                <i class="bi bi-arrow-left"></i> Wróć do logowania
            </button>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">



