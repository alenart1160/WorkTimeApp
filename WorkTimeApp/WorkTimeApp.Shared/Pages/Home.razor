@page "/"
@using WorkTimeApp.Shared.Services
@using WorkTimeApp.Shared.Model
@using Microsoft.AspNetCore.Components

@inject NavigationManager Navigation
@inject UserModel UserModel
@inject ApiService ApiService
@inject WorkTime.Abstractions.IPlatformInfo PlatformInfo

<PageTitle>WorkTime - Logowanie</PageTitle>

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-3">
            <h2 class="text-primary">
                <i class="bi bi-clock-history"></i> WorkTime
            </h2>
            <p class="text-muted">Zaloguj się do swojego konta</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert @(errorMessage == "Zalogowano!" ? "alert-success" : "alert-danger") text-center">
                @errorMessage
            </div>
        }

        <form @onsubmit="Submit">
            <div class="mb-3">
                <label class="form-label">Login (Email)</label>
                <input @bind="Email" type="email" class="form-control" placeholder="Wprowadź email" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Hasło</label>
                <input @bind="Password" type="password" class="form-control" placeholder="Wprowadź hasło" required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Zaloguj się
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <button @onclick="NavigateToResetPassword" class="btn btn-link">
                <i class="bi bi-key"></i> Zapomniałeś hasła?
            </button>
            <br />
            <button @onclick="NavigateToSignIn" class="btn btn-outline-secondary mt-2">
                <i class="bi bi-person-plus"></i> Utwórz konto
            </button>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

@code {
    private string? Email { get; set; }
    private string? Password { get; set; }
    private string? errorMessage { get; set; }

    protected override void OnInitialized()
    {
        UserModel.Id = 0;
    }

    private async Task Submit()
    {
        if (string.IsNullOrEmpty(Email) || string.IsNullOrEmpty(Password))
        {
            errorMessage = "Email i hasło są wymagane.";
            return;
        }
        if (!Email.Contains("@") || !Email.Contains("."))
        {
            errorMessage = "Nieprawidłowy format email.";
            return;
        }

        UserModel.Password = Password;
        UserModel.Email = Email;
        UserModel.Login = Email;

        var result = await ApiService.LoginAsync(UserModel, ApiService.GetOptions());
        errorMessage = result ? "Zalogowano!" : "Błąd logowania";

        if (result)
        {
            UserModel.Id = ApiService._id;
            Navigation.NavigateTo($"tasks/{UserModel.Id}");
        }
    }

    private void NavigateToResetPassword() => Navigation.NavigateTo("resetPassword");
    private void NavigateToSignIn() => Navigation.NavigateTo("createAccount");
}
